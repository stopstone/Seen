<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="AppButtonOnPrimary">
        <item name="android:background">@drawable/selector_background_profile_button</item>
        <item name="android:textAppearance">@style/AppTextOnPrimary</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/AppTextOnPrimary.S16.Bold</item>
        <item name="android:background">@drawable/selector_background_button</item>
    </style>

    <style name="AppRoundedImageLarge">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppRoundedImageMedium">
        <item name="cornerSize">6dp</item>
        <item name="android:background">@drawable/background_gray_400</item>
    </style>

    <style name="AppTextTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="AppTextTitle.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextTitle.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextTitle.S18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextTitle.S14.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle.S18.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextBody" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AppTextBody.S10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTextCaption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextCaption.Grey600">
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="AppTextCaption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextCaption.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextCaption.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextLabel" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="AppTextLabel.S16">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextLabel.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextLabel.S10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTextOnPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextOnPrimary.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextOnPrimary.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>